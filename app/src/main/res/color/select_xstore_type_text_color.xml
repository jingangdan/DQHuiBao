<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--状态选择器的文件放到drawable文件夹下-->
    <!-- 对应的状态控制都是包含在item内的，根据不同的状态来设定不同的视觉资源-->
    <item android:state_activated="true" android:color="@color/red_normal"/>
    <item android:state_selected="true" android:color="@color/red_normal"/>
    <item android:state_checked="true" android:color="@color/red_normal"/>
    <item android:state_checkable="true" android:color="@color/red_normal"/>
    <item android:color="@color/black" />
</selector >