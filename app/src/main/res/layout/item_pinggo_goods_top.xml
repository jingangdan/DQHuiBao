<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_pingo_goods_top_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_empty001"/>
    <TextView
        android:id="@+id/item_pingo_goods_top_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red_normal"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="￥1.00"/>
    <TextView
        android:id="@+id/item_pingo_goods_top_oldprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_pingo_goods_top_price"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="￥3.00"/>
</RelativeLayout>