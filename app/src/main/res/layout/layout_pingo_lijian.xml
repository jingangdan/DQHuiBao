<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/pingo_lijian_top_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/image_pingo_index_lijian"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_pingo_lijian"
        android:orientation="horizontal">
        <!--左侧-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/radius_pingo_bg_gray"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pingo_lijian_left_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_pressed"
                    android:text="临沂大学"/>
                <TextView
                    android:id="@+id/pingo_lijian_left_shengyudanshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="还剩3单"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/pingo_lijian_left_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp">

            </android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/pingo_lijian_left_tishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="11sp"
                android:text="xxx发起拼团,赶快加入吧"/>
            <TextView
                android:id="@+id/pingo_lijian_left_youhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="再来一单,立减2元"/>
        </LinearLayout>
        <!--中间-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pingo_lijian_center_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/icon_pingo_center_time_lijian"/>
            <TextView
                android:id="@+id/pingo_lijian_center_tishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/red_normal"
                android:text="拼单计时"/>
            <TextView
                android:id="@+id/pingo_lijian_center_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/but_put_in"
                android:text="00:00"/>
        </LinearLayout>
        <!--右侧-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/radius_pingo_bg_gray"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pingo_lijian_right_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_pressed"
                    android:text="山东医专"/>
                <TextView
                    android:id="@+id/pingo_lijian_right_shengyudanshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="还剩3单"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/pingo_lijian_right_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp">

            </android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/pingo_lijian_right_tishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="11sp"
                android:text="xxx发起拼团,赶快加入吧"/>
            <TextView
                android:id="@+id/pingo_lijian_right_youhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="再来一单,立减2元"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>