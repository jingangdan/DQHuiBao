<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/item_jifen_goods_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/item_jifen_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/item_jifen_goods_imageView"
        android:layout_toRightOf="@+id/item_jifen_goods_imageView"
        android:maxLines="3"
        android:text="namek上看到你飞洒地方就佩服使得开发商的房间啊视频辅导辅导克里斯多佛圣诞放假啊送到佛山的疯狂"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_jifen_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red_normal"
        android:layout_toEndOf="@+id/item_jifen_goods_imageView"
        android:layout_toRightOf="@+id/item_jifen_goods_imageView"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:text="￥8.00  +  200积分"/>

    <Button
        android:id="@+id/item_jifen_goods_qg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/yuanjiao_red"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="抢购"/>
</RelativeLayout>