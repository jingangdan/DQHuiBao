<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="账号"/>
        <EditText
            android:id="@+id/tixian_acountinfo_acount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="22"
            android:textSize="24sp"
            android:inputType="number"
            android:maxLines="1"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:hint="支付宝账号/银行卡号"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGray"/>
    <RadioGroup
        android:id="@+id/tixian_acountinfo_radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <RadioButton
            android:id="@+id/tixian_acountinfo_yinhangka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:button="@drawable/pressed_tixian_radio"
            android:checked="true"
            android:text="银行卡"/>
        <RadioButton
            android:id="@+id/tixian_acountinfo_zhifubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginLeft="10dp"
            android:button="@drawable/pressed_tixian_radio"
            android:text="支付宝"/>
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGray"/>
    <LinearLayout
        android:id="@+id/tixian_acountinfo_dizhilayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="地址"/>
        <EditText
            android:id="@+id/tixian_acountinfo_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:maxLines="1"
            android:hint="开户行地址"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGray"/>
    <TextView
        android:id="@+id/tixian_acountinfo_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/tixian_acountinfo_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/pressed_red_to_white"
        android:textColor="@color/white"
        android:text="确认"/>
</LinearLayout>