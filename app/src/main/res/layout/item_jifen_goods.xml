<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:layout_goneMarginBottom="10dp"
    android:background="@color/white"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/item_jifen_goods_imageView"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_jifen_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:maxLines="3"
            android:text="namek上看到你飞洒地方就佩服使得开发商的房间啊视频辅导辅导克里斯多佛圣诞放假啊送到佛山的疯狂"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_jifen_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/red_normal"
                android:textSize="18sp"
                android:text="￥8.00  +  200积分"/>

            <TextView
                android:id="@+id/item_jifen_goods_qg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yuanjiao_red"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="16sp"
                android:text="抢购"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>