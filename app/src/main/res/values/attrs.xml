<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>

        <attr name="height" format="dimension"></attr>
        <attr name="width" format="dimension"></attr>
        <attr name="text_follow_progress" format="boolean"></attr>
        <attr name="dwave" format="dimension"></attr>
        <attr name="wave_duration" format="integer"></attr>
        <attr name="max" format="integer"></attr>
        <attr name="progress" format="integer"></attr>
        <attr name="behind_wave_color" format="color"></attr>
        <attr name="front_wave_color" format="color"></attr>
        <attr name="arc_color" format="color"></attr>
        <attr name="border_width" format="dimension"></attr>
        <attr name="border_color" format="color"></attr>
        <attr name="shape" format="string"></attr>
        <attr name="cavans_bg" format="color"></attr>
        <attr name="text_color" format="color"></attr>
        <attr name="text_margin_top" format="dimension"></attr>
        <attr name="text_size" format="dimension"></attr>
        <attr name="auto_text_size" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="voucherView">

        <attr name="drawType">
            <enum name="circle" value="0"/>
            <enum name="ellipse" value="1"/>
            <enum name="triangle" value="2"/>
            <enum name="square" value="3"/>
        </attr>

        <attr name="orientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
            <enum name="around" value="2"/>
        </attr>

        <attr name="mGap" format="dimension"/>
        <attr name="mRadius" format="dimension"/>
        <attr name="BgColor" format="color"/>

    </declare-styleable>
</resources>
