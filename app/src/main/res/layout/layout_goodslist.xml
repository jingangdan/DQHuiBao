<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#55cccccc">
    <LinearLayout
        android:id="@+id/goods_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/goods_title_image_ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_pingo_title_miaosha"/>
        <ImageView
            android:id="@+id/goods_title_image_tm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_pingo_title_temai"/>
        <TextView
            android:id="@+id/goods_title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="周五秒杀"/>
        <TextView
            android:id="@+id/goods_title_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:layout_margin="10dp"
            android:text="更多 >>"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_goodslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>
    <TextView
        android:id="@+id/index_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:text="查看更多商品"/>
</LinearLayout>
