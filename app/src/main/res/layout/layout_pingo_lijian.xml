<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#55cccccc">
    <LinearLayout
        android:id="@+id/goods_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/goods_title_image_ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_pingo_title_lijian"/>
        <TextView
            android:id="@+id/goods_title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:text="立减金额"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="距结束"/>
        <TextView
            android:id="@+id/pingo_lijian_center_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/but_put_in"
            android:text="00:00:00"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--左侧-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/radius_pingo_bg_gray"
                    android:padding="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/pingo_lijian_left_name"
                        style="@style/pingo_index_notice_text"
                        android:textColor="@color/red_pressed"/>
                    <TextView
                        android:id="@+id/pingo_lijian_left_shengyudanshu"
                        style="@style/pingo_index_notice_text"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/pingo_lijian_left_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                </android.support.v7.widget.RecyclerView>
                <TextView
                    android:id="@+id/pingo_lijian_left_tishi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/pingo_lijian_left_youhui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:text="赶紧加入吧"/>
            </LinearLayout>

            <!--右侧-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="right"
                    android:background="@drawable/radius_pingo_bg_gray"
                    android:padding="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/pingo_lijian_right_name"
                        style="@style/pingo_index_notice_text"
                        android:textColor="@color/red_pressed"/>
                    <TextView
                        android:id="@+id/pingo_lijian_right_shengyudanshu"
                        style="@style/pingo_index_notice_text"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/pingo_lijian_right_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                </android.support.v7.widget.RecyclerView>
                <TextView
                    android:id="@+id/pingo_lijian_right_tishi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/pingo_lijian_right_youhui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:text="赶紧加入吧"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>