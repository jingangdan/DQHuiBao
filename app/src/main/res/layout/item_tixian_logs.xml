<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_marginBottom="1dp">
    <TextView
        android:id="@+id/item_tixian_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:maxLines="1"
        android:text="132154984946513213216544"/>
    <TextView
        android:id="@+id/item_tixian_quxiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:background="@drawable/pressed_bill"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:text="取消"/>
    <TextView
        android:id="@+id/item_tixian_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_tixian_account"
        android:textColor="@color/red_normal"
        android:text="0.00"/>
    <TextView
        android:id="@+id/item_tixian_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_tixian_account"
        android:text="处理中"/>
    <TextView
        android:id="@+id/item_tixian_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_tixian_price"
        android:text=""/>
    <TextView
        android:id="@+id/item_tixian_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_tixian_desc"
        android:text="2018.12.1"/>
</RelativeLayout>