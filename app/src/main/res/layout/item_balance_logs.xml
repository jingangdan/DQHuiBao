<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_marginBottom="2dp">
    <TextView
        android:id="@+id/item_baance_logs_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="145223658523388"/>
    <TextView
        android:id="@+id/item_baance_logs_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_baance_logs_account"
        android:text="0.00"/>
    <TextView
        android:id="@+id/item_baance_logs_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_baance_logs_account"
        android:text="完成"/>
    <TextView
        android:id="@+id/item_baance_logs_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_baance_logs_number"
        android:text="2018"/>
</RelativeLayout>