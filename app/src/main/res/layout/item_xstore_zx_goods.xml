<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/white">
    <ImageView
        android:id="@+id/item_xstore_zx_goods_iamge"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_xstore_zx_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="name"/>
        <TextView
            android:id="@+id/item_xstore_zx_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ï¿¥ 0.00"/>
    </LinearLayout>
    <CheckBox
        android:id="@+id/item_xstore_zx_goods_checked"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="5dp"
        android:button="@null"
        android:background="@drawable/select_xstore_add_or_remove"/>
</LinearLayout>